@model string
<div class="modal fade ctn-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title ctn-title" id="myModalLabel">@Model</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body modal-scroller">
                <div class="text-center" id="spinner" style="display:none;"><i class="fa fa-circle-o-notch fa-spin text-primary fa-4x"></i></div>
                <div id="ctnBody">
                </div>
            </div>
        </div>
    </div>
</div>