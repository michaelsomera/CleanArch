@{
    ViewBag.Title = "Index";
}
@section styles{
    <link href="~/vendor/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/vendor/toastr/css/toastr.css" rel="stylesheet" />
}
<div class="card">
    <div class="card-header">
        <h5><i class="fa fa-file-movie-o"></i> Movies</h5>
    </div>
    <div class="card-body">
        <table id="data-table" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!--Modal-->
@await Html.PartialAsync("_ModalPartial", "Manage Movies")

@section scripts
    {
    <script>
        require(["jquery", "bootstrap", "datatables", "datatables.net"],
            function (jq, bs, dt, dtn) {
                $(document).ready(function () {
                    var table = $("#data-table").DataTable({
                        ajax: {
                            url: "/api/movies",
                            dataSrc: ""
                        },
                        columns: [
                            {
                                data: "name",

                            },
                            {
                                data: "genre.name"
                            }
                        ]
                    });
                });
            });

    </script>
}
