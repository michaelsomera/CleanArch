@model CleanArch.Application.ViewModels.MovieFormViewModel


<form asp-action="ManageMovie" asp-controller="Movies" data-ajax="true" data-ajax-success="onSuccess" data-ajax-update="#movieForm" data-ajax-mode="replace" data-ajax-method="POST" id="movieForm">
    @Html.ValidationSummary(true, "Please fix all the errors.")
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.Name)
        @Html.TextBoxFor(x => x.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.ReleaseDate)
        @Html.TextBoxFor(x => x.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.GenreId)
        @Html.DropDownListFor(x => x.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.NumberInStock)
        @Html.TextBoxFor(x => x.Movie.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.NumberInStock)
    </div>
    @Html.HiddenFor(x => x.Movie.Id)
    @Html.AntiForgeryToken()
    <button id="btnSubmit" type="submit" class="btn btn-primary">Save</button>
</form>